[% WRAPPER 'include/layout.tx' %]

<div id="DirectoryPage">
<h2>[% path %]</h2>

<table>
  <tr>
    <th class='name'>Name</th>
    <th class='size'>Size</th>
  </tr>
  [% body | raw %]
  [% FOR v IN files %]
    <tr><td class='name'><a href='[% v.path %]?pretty=1'>[% v.basename %]</a></td><td class='size'>[% v.size %]</td></tr>
  [% END %]
</table>
</div>

[% END %]
