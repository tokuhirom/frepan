<div class="search-header"><span class="total_entries">[% pager.total_entries %] hits.</span></div>

[% FOR file IN files %]
<div class="SearchResultElement">
<a href="/~[% lower(file.author) %]/[% file.dist_name %]-[% file.dist_version %]/[% file.path %]">[% file.package %]</a><br />
<div class="description">[% file.description %]</div>
<div class="search-footer"><a class="dist" href="/~[% file.author | lower %]/[% file.dist_name %]-[% file.dist_version %]/">[% file.dist_name %]-[% file.dist_version %]</a> at [% file.timestamp %] by <a href="/~[% file.author | lower %]/" class="author">[% file.fullname %]</a><span class="search-score">([% file.score | commify %])</span></div>
</div>
[% END %]
