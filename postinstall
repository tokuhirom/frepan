#!/bin/sh

cd $HOME/code/.; ln -s ../../etc/frepan.pl `pwd`/config/deployment.pl
echo made a symbolic link to the configuration file.

crontab - < crontab
echo installed crontab

perl <<'END_OF_PERL' | crontab -
    print <<"...";
# THIS FILE IS AUTOMATICALLY GENERATED. DO NOT EDIT DIRECTLY.
PATH=$ENV{PATH}
PERL5LIB=$ENV{PERL5LIB}
PLACK_ENV=$ENV{PLACK_ENV}

...

    print `cat crontab`;
END_OF_PERL
echo installed crontab

